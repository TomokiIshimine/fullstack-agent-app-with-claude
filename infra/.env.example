# Docker Compose Environment Variables
# This file is auto-copied to .env.development on first `make up`.
# Edit .env.development to customize values for your environment.

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=app_db
MYSQL_USER=app_user
MYSQL_PASSWORD=apppassword123

# Flask Configuration
FLASK_APP=app.main:app

# Redis Configuration for Rate Limiting
RATE_LIMIT_ENABLED=true
REDIS_PASSWORD=redispassword123

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Test123!

# Test User Seeding (development only)
SEED_TEST_USERS=true
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=Test123!

# Anthropic API Key (required for AI chat functionality)
# ANTHROPIC_API_KEY=sk-ant-xxx

# NOTE: If you change MYSQL_PASSWORD or MYSQL_ROOT_PASSWORD after the database
# volume has been initialized, run `make db-reset` to reinitialize.
